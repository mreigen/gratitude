<h1>Listing graces</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @graces.each do |grace| %>
      <tr>
        <td><%= grace.description %></td>
        <td><%= link_to 'Show', day_grace_path(@day, grace) %></td>
        <td><%= link_to 'Edit', edit_day_grace_path(@day, grace) %></td>
        <td><%= link_to 'Destroy', [@day, grace], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

